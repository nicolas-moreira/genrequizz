    body
        form.mainContainer(action="")
            .start#start(style="display:")
                 h1.finalText.mb-3.font-weight-normal Genre quizz
                 h3.finalText.mb-3.font-weight-normal Trouve le bon genre pour chacun des pr√©noms.
                 input.btn.btn-lg.btn-primary.btn-block#startBtn(type="button", value="Jouer")
            .play#play(style="display:none")
                .points.col-sm-12
                    h4.mb-3.font-weight-normal#pts
                .name.col-sm-12
                    h1.mb-3.font-weight-normal#name 
                .buttons.col-sm-12
                    input.btn.btn-md.btn-primary.btn-block#male(type="button", value="Masculin")
                    input.btn.btn-md.btn-primary.btn-block#female(type="button", value="Feminin")
            .menu#menu(style="display:none")
                 h3.finalText.mb-3.font-weight-normal#finalText ?
                 input.btn.btn-lg.btn-primary.btn-block#replay(type="button", value="Rejouer")

